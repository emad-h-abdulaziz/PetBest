        <TextBox x:Name="txtService" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="71,316,0,0" IsReadOnly="True" Grid.ColumnSpan="2" Background="#FFF6F3F3" FontFamily="Lucida Fax"/>
        <TextBox x:Name="txtCategory" HorizontalAlignment="Left" Height="23" Margin="71,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.ColumnSpan="2" Background="#FFF6F3F3" FontFamily="Lucida Fax"/>
        <Label Content="Category:" HorizontalAlignment="Left" Margin="71,218,0,0" VerticalAlignment="Top" FontFamily="Lucida Fax" Foreground="#FFEEEFF1"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Height="23" Margin="71,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.ColumnSpan="2" Background="#FFF6F3F3" FontFamily="Lucida Fax"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="71,353,0,0" VerticalAlignment="Top" FontFamily="Lucida Fax" Foreground="#FFEEEFF1"/>

    </Grid>
</Window>
