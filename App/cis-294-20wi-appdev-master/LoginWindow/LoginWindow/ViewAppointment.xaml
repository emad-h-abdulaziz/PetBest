        <TextBox x:Name="txtCustomerName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="71,105,0,0" IsReadOnly="True" Grid.ColumnSpan="2" Background="#FFF6F3F3" FontFamily="Lucida Fax"/>
        <Label Content="Order ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="71,146,0,0" FontFamily="Lucida Fax" Foreground="#FFEEEFF1"/>
